<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
		<groupId>com.synchronoss.bda</groupId>
		<artifactId>xdf-nextgen</artifactId>
		<version>${revision}</version>
  </parent>

  <!-- use app.name from parent pom -->
  <!--artifactId>${app.name}</artifactId-->
  <artifactId>xdf</artifactId>

  <packaging>jar</packaging>
  <!--name>xdf</name-->
  <properties>
    <xdf.package.name>sip-xdf</xdf.package.name>
  </properties>

  <dependencies>
  <dependency>
    <groupId>com.synchronoss.bda</groupId>
    <artifactId>xdf-core</artifactId>
    <version>${project.version}</version>
  </dependency>
  <dependency>
    <groupId>com.synchronoss.bda</groupId>
    <artifactId>xdf-parser</artifactId>
    <version>${project.version}</version>
  </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-data-profiler</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-transformer</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-preview</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-sql</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-esloader</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.synchronoss.bda</groupId>
      <artifactId>xdf-dataprocessor</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>


   <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>org.codehaus.janino:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>full</shadedClassifierName>
              <artifactSet>
                <includes>
                  <include>*:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                <!--  <resource>reference.conf</resource> -->
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- RPM plugin -->
      <plugin>
        <groupId>de.dentrassi.maven</groupId>
        <artifactId>rpm</artifactId>
        <version>1.1.0</version>
        <executions>
          <execution>
            <goals>
              <goal>rpm</goal>
            </goals>
            <configuration>
              <packageName>${xdf.package.name}</packageName>
              <version>${revision.nodash}</version>
              <requires>
                <require>jq &gt;= 1.5</require>
              </requires>
              <rulesets>
                <ruleset>
                  <id>default</id>
                  <rules>
                    <rule>
                      <when>
                        <prefix>/opt/sip/${xdf.package.name}/bin/</prefix>
                      </when>
                      <mode>0755</mode>
                    </rule>
                    <rule>
                      <when>
                        <prefix>/opt/sip/${xdf.package.name}/test/</prefix>
                      </when>
                      <mode>0755</mode>
                    </rule>
                    <rule>
                      <when>
                        <prefix>/var/opt/sip/${xdf.package.name}/log</prefix>
                      </when>
                      <user>mapr</user>
                      <group>mapr</group>
                    </rule>
                  </rules>
                </ruleset>
              </rulesets>
              <entries>
                <entry>
                  <name>/opt/sip/${xdf.package.name}</name>
                  <directory>true</directory>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/bin</name>
                  <directory>true</directory>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/bin</name>
                  <collect>
                    <from>bin</from>
                    <excludes>
                      <exclude>templates</exclude>
                    </excludes>
                  </collect>
                  <ruleset>default</ruleset>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/conf</name>
                  <directory>true</directory>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/conf</name>
                  <collect>
                    <from>conf</from>
                  </collect>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/lib</name>
                  <directory>true</directory>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/lib/xdf-full.jar</name>
                  <file>${project.build.directory}/${project.artifactId}-${project.version}-full.jar</file>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/test</name>
                  <directory>true</directory>
                </entry>
                <entry>
                  <name>/opt/sip/${xdf.package.name}/test</name>
                  <collect>
                    <from>test</from>
                  </collect>
                  <ruleset>default</ruleset>
                </entry>
                <entry>
                  <name>/var/opt/sip/${xdf.package.name}/log</name>
                  <directory>true</directory>
                  <ruleset>default</ruleset>
                </entry>
              </entries>
              <signature>
                <skip>true</skip>
              </signature>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- RPM plugin : end -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>${project.basedir}/src/main/assembly/assembly.xml</descriptor>
              </descriptors>
              <finalName>${xdf.package.name}-${project.version}</finalName>
              <!-- Enable long file names without Maven warning -->
              <tarLongFileMode>posix</tarLongFileMode>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
