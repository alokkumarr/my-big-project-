{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "description" : "Defines the configuration XDF-UX component",
  "id" : "component",
  "type": "object",
  "numberOfFiles": {
    "description": "Number of files for all output objects",
    "type": "integer",
    "default" : 1
  },
  "format": {
    "description": "Data format",
    "type": "object",
    "default": "parquet",
    "enum": [
      "parquet",
      "json",
      "csv",
      "maprdb",
      "es"
    ]
  },
  "metadata": {
    "type": "object",
    "properties": {
      "createdBy": {
        "description": "Parameter name",
        "type": "string",
        "default" : "nobody"
      },
      "description": {
        "description": "Description of the data set",
        "type": "string",
        "additionalProperties": false,
        "default": "__none__"
      },
      "category": {
        "description": "Category of a dataset",
        "type": "string",
        "additionalProperties": false
      },
      "subCategory": {
        "description": "Sub category of a dataset",
        "type": "string",
        "additionalProperties": false
      }
    }
  },
  "InputDataSet" : {
    "type" : "object",
    "required": [
      "name",
      "object",
      "location"
    ],
    "properties" : {
      "name": {
        "description": "Parameter name",
        "type": "string"
      },
      "dataSet": {
        "description": "Data object name",
        "type": "string"
      },
      "fileMask": {
        "type": "string"
      },
      "format": {
        "$ref": "#/format"
      },
      "datasource": {
        "type": "string",
        "description": "Type of data source",
        "default": "fs"
      },
      "catalog": {
        "type": "string",
        "description": "Catalog in data source",
        "default": "data"
      },
      "project": {
        "type": "string",
        "description": "Project of input object"
      }
    }
  },
  "OutputDataSet" : {
    "type": "object",
    "required": [
      "name",
      "object",
      "location"
    ],
    "properties": {
      "name": {
        "description": "Parameter name",
        "type": "string"
      },
      "dataSet": {
        "description": "Data object name",
        "type": "string"
      },
      "format": {
        "$ref": "#/format"
      },
      "mode": {
        "type": "object",
        "description": "mode of the partition",
        "default": "replace",
        "enum": [
          "replace",
          "append"
        ]
      },
      "numberOfFiles": {
        "$ref": "#/numberOfFiles"
      },
      "dataSource": {
        "type": "object",
        "description": "mode of the partition",
        "default": "fs"
      },
      "catalog": {
        "type": "string",
        "description": "Location in selected container",
        "default": "data"
      },
      "metadata": {
        "$ref": "#/metadata"
      }
    }
  },
  "properties" : {
    "inputs" : {
      "description" : "List of named input data objects",
      "type" : "array",
      "items" : {
        "$ref": "#/InputDataSet"
      }
    },
    "outputs" : {
      "description" : "List of named output data objects",
      "type" : "array",
      "items" : {
        "$ref": "#/OutputDataSet"
      }
    },
    "project" : {
      "description": "Project/Application name (ID)",
      "type": "string"
    },
    "parameters" : {
      "description" : "System parameters specific for component execution",
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "value" : {
            "type" : "string"
          }
        }
      }
    },
    "parser": {
      "description": "Parser specific properties",
      "properties": {
        "file": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "format": {
                "type": "string"
              }
            }
          }
        },
        "lineSeparator": {
          "type": "string"
        },
        "delimiter": {
          "type": "string"
        },
        "quoteChar": {
          "type": "string"
        },
        "quoteEscape": {
          "type": "string"
        },
        "headerSize": {
          "type": "integer"
        },
        "numberOfFiles": {
          "$ref": "#/numberOfFiles"
        }
      }
    },
    "scd2": {
      "description": "SCD2 specific properties",
      "properties": {
        "keys" : {
          "type" : "array",
          "description" : "List of key fields in data source to identify processed record(s)",
          "minItems" : 1,
          "uniqueItems" : true,
          "items" : {
            "type" : "string"
          }
        },
        "trackableFields" : {
          "type" : "array",
          "description" : "List of trackable fields",
          "minItems" : 1,
          "uniqueItems" : true,
          "items" : {
            "type" : "string"
          }
        },
        "versionField" : {
          "description" : "Name of the field containing record version (must be comparable)",
          "type" : "string"
        },
        "versionFieldFormat" : {
          "description" : "If version field is date/time the field must contain Java date/time format",
          "type" : "string"
        },
        "numberOfFiles": {
          "$ref": "#/numberOfFiles"
        }
      }
    },
    "sql" : {
      "description": "SQL script executor specific properties",
      "properties": {
        "script" : {
          "description" : "SQL script sile name name",
          "type" : "string"
        },
        "scriptLocation" : {
          "description" : "Location containing SQL script, special value: 'inline' means scripts field itself is base64 encoded SQL script",
          "type" : "string"
        }
      }
    },
    "transformer" : {
      "description": "Transformer specific properties",
      "properties": {
        "script" : {
          "description" : "SQL script sile name name",
          "type" : "string"
        },
        "scriptLocation" : {
          "description" : "Location containing SQL script, special value: 'inline' means scripts field itself is base64 encoded Java (Janino-compatible) script",
          "type" : "string"
        },
        "mapping" : [
          {
//            "inField" :


          }


        ]
      }
    },
    "es-loader" : {
      "description": "ES Loader specific properties",
      "properties": {}
    },
    "es-reader" : {
      "description": "ES Reader specific properties",
      "properties": {}
    },
    "converter" : {
      "description": "Converter specific properties",
      "properties": {}
    },
    "db-loader" : {
      "description": "DB Loader specific properties",
      "properties": {}
    },
    "analyzer" : {
      "description": "Data profiler/analyzer configuration properties",
      "properties": {
        "esId" : {
          "description" : "Id of elastic search document containing analyzer metadata",
          "type" : "string"
        },
        "fieldSeparator" : {
          "description" : "Field separator",
          "type" : "string"
        },
        "header" : {
          "description" : "Indicates if source data contains header",
          "type" : "boolean"
        },
        "timestampMasks" : {
          "description" : "Array of timestamp masks used to define fields as timestamps/dates",
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        }
      }
    },
    "zero" : {
      "description": "Zero specific properties",
      "properties": {}
    }

  }
}