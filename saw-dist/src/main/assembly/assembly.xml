<?xml version="1.0"?>
<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>bin</id>
  <formats>
    <format>tgz</format>
  </formats>
  <baseDirectory>${project.parent.artifactId}</baseDirectory>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includeSubModules>false</includeSubModules>
      <includes>
        <include>com.synchronoss.saw:saw-services-dist</include>
        <include>com.synchronoss:bda-saw</include>
        <include>com.sncr:saw-security-parent</include>
      </includes>
      <binaries>
        <attachmentClassifier>bin</attachmentClassifier>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>modules</outputDirectory>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/doc</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/ansible</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/ext/modules</directory>
      <outputDirectory>modules</outputDirectory>
    </fileSet>
    <!-- following 2 filesets are hacks, modify it later -->
    <fileSet>
      <directory>../saw-security/saw-security-command-line-tool/target</directory>
      <outputDirectory>modules/saw-security/rpms</outputDirectory>
      <includes>
        <include>saw-security-*.rpm</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../saw-security/saw-security/src/main/ansible</directory>
      <outputDirectory>modules/saw-security/ansible</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
