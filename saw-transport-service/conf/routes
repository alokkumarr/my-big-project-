# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /               controllers.MTSControl.index

POST    /		controllers.TS.handleRequest
POST    /md		controllers.MD.handleRequest
POST    /analysis	controllers.ANA.handleRequest

GET     /ObjectSearch   controllers.MCT.handleTagRequest(LCID: String, query: Option[String])
POST    /ObjectSearch 	controllers.MCT.extendedTagRequest(LCID: String, indexname: Option[String], objecttype: Option[String])

# Control interface

GET     /control        controllers.MTSControl.executeCmd(CMD:String, PARAMETERS:Option[String])
POST    /control        controllers.MTSControl.executeExtendedCmd(CMD:String)

GET     /sr             controllers.MTSControl.sr( parameters:Option[String])
