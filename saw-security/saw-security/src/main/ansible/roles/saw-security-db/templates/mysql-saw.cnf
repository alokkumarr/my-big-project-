[mysqld]
lower_case_table_names=1
binlog_format=ROW
default_storage_engine=InnoDB
innodb_autoinc_lock_mode=2
wsrep_on=ON
wsrep_provider=/usr/lib64/galera/libgalera_smm.so
wsrep_cluster_name=sip
wsrep_cluster_address=gcomm://
{%- for host in groups['saw-security'] + groups['saw-security-arbitrator'] -%}
  {{ host }}{% if not loop.last %},{% endif %}
{%- endfor %}
{% if sip_secure %}
ssl_cert = {{ sip_server.ssl.certificate }}
ssl_key = {{ sip_server.ssl.key }}
ssl_ca = {{ sip_server.ssl.ca }}
wsrep_provider_options="socket.ssl_cert= {{ sip_server.ssl.certificate }} ;socket.ssl_key= {{ sip_server.ssl.key }} ;socket.ssl_ca= {{ sip_server.ssl.ca }}"
{% endif %}
