<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.synchronoss</groupId>
  <artifactId>bda-rtps</artifactId>
  <version>2.0.0_dev</version>
  <packaging>pom</packaging>
  <properties>
    <!--
      default value here,
      can be specified outside with -Dprod.release=RRR
    -->
    <prod.release>0_g0000_wip</prod.release>
    <!-- use prod.release property -->
    <project.release>${prod.release}</project.release>
    <!-- RPM properties -->
    <rpm.version>${project.version}</rpm.version>
    <rpm.release>${project.release}</rpm.release>
    <spark-version>2.1.0</spark-version>
    <scala-version>2.11</scala-version>
    <es-version>5.4.0</es-version>
    <typesafe-version>1.3.1</typesafe-version>
    <gson-version>2.8.0</gson-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compile.version>2.3.2</maven.compile.version>
    <maven.compiler.version>1.8</maven.compiler.version>
  </properties>
  <repositories>
    <repository>
      <id>mapr-maven</id>
      <url>http://repository.mapr.com/maven</url>
      <releases><enabled>true</enabled></releases>
      <snapshots><enabled>false</enabled></snapshots>
    </repository>
  </repositories>

  <dependencies>
    <!-- Spark related -->
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-core_${scala-version}</artifactId>
      <version>${spark-version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-streaming_${scala-version}</artifactId>
      <version>${spark-version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-sql_${scala-version}</artifactId>
      <version>${spark-version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>elasticsearch-spark-20_${scala-version}</artifactId>
      <version>${es-version}</version>
    </dependency>

    <!-- MapR specifics -->
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-streaming-kafka-0-9_2.11</artifactId>
      <version>${spark-version}-mapr-1703</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.mapr.streams</groupId>
      <artifactId>mapr-streams</artifactId>
      <version>5.1.0-mapr</version>
      <scope>provided</scope>
    </dependency>

    <!-- Common non-Spark -->
    <dependency>
      <groupId>com.typesafe</groupId>
      <artifactId>config</artifactId>
      <version>${typesafe-version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>${gson-version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <modules>
    <!-- RTPS -->
    <module>rtps</module>
    <module>rtps-common</module>
  </modules>
  <build>
    <defaultGoal>package</defaultGoal>
  </build>
</project>
