                    <preremoveScriptlet>
                        <scriptFile>src/install/preremove</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preremoveScriptlet>
                  -->
                </configuration>
            </plugin>
            <!-- RPM plugin : end -->

