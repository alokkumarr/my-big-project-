                                        <include>Data_Entry_Automation_Utilities.py</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>
                                ${app.optDir}/db/entry/conf
                            </directory>
                            <filemode>755</filemode>
                            <username>${app.user}</username>
                            <groupname>${app.group}</groupname>
                            <sources>
                                <source>
                                    <location>${project.basedir}/Database/Source/Data_Entry_Automation</location>
                                    <filter>true</filter>
                                    <includes>
                                        <include>configuration.json</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        
                        <mapping>
                            <directory>
                                ${app.varDir}/${app.name}
                            </directory>
                        </mapping>
                    </mappings>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
