        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>${maven.assembly.version}</version>
            <executions>
              <execution>
                <id>sncr_saw</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <outputDirectory>${output.directory}</outputDirectory>
                  <descriptors>
                    <descriptor>assembly/assembly.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
          
            <!--
              RPM build
              -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <!-- RPM as Side Effect -->
                <executions>
                  <execution>
                    <id>generate-rpm</id>
                    <phase>package</phase>
                    <goals>
                      <goal>rpm</goal>
                    </goals>
                  </execution>
                </executions>
                <!-- executions><execution>
                    <id>${app.name}-rpm-build</id>
                    <phase>package</phase>
                    <goals><goal>rpm</goal></goals>
                </execution></executions -->

                <configuration>
                    <license>Synchronoss proprietary product</license>
                    <distribution>SNCR XDF 2017</distribution>
                    <needarch>false</needarch>
                    <targetOS>i386-linux</targetOS>
                    <group>BDA/SAW</group>
                    <packager>BDA</packager>
                    <name>${app.name}</name>
                    <requires><require>tomcat &gt; 7.0</require></requires>
                    <provides><provide>${app.name}</provide></provides>
                    <!--
                        Only applicable to a Mapping if filemode,
                        username, AND groupname are NOT populated.
                    -->
                    <defaultUsername>${app.user}</defaultUsername>
                    <defaultGroupname>${app.group}</defaultGroupname>
                    <defaultDirmode>555</defaultDirmode>
                    <defaultFilemode>444</defaultFilemode>
                    <!-- A list of %define arguments -->
                    <defineStatements><defineStatement>
                        _unpackaged_files_terminate_build 0
                    </defineStatement></defineStatements>
                    <!-- RPM contents -->
                    <mappings>
                        <!-- Top level directories -->
                        <mapping><directory>${app.optDir}</directory></mapping>
                        <mapping><directory>${app.etcDir}</directory></mapping>
                        <mapping>
                            <!-- /var/bda/testapp-x.x -->
                            <directory>${app.varDir}</directory>
                            <directoryIncluded>true</directoryIncluded>
                            <!-- dirmode>750</dirmode -->
                            <filemode>750</filemode>
                            <username>${app.user}</username>
                            <groupname>${app.group}</groupname>
                        </mapping>
                        <!-- env file -->
                        <!--
                        <mapping>
                            <directory>${app.etcDir}</directory>
                            <sources><source><location>src/app/testapp.env</location></source></sources>
                            <configuration>true</configuration>
                        </mapping>
                      -->

                        <mapping>
                            <directory>${app.optDir}</directory>
                            <sources>
                                <source><location>target/bda-saw-2.0.0.0.war</location></source>
                                <!--
                                <source><location>...</location></source>
                                -->
                            </sources>
                            <directoryIncluded>false</directoryIncluded>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <script>
echo ${app.nameVer} pre-install is being executed
#echo &gt;/tmp/.xdf-testapp.tmp.env '
#export user=${app.user}
#export group=${app.group}
#export app_name=${app.name}
#export app_version=${app.version}
#export app_home=${app.optDir}
#'
                    </script>
                    </preinstallScriptlet>
