        <!-- To define the plugin version in your parent POM -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>rpm-maven-plugin</artifactId>
                    <version>2.1.5</version>
                    <extensions>true</extensions>
                </plugin>
            </plugins>
        </pluginManagement>
        <!-- To use the plugin goals in your POM or parent POM -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.google.code.play2-maven-plugin</groupId>
                <artifactId>play2-maven-plugin</artifactId>
                <version>${play2.plugin.version}</version>
                <extensions>true</extensions>
                <dependencies>
                    <dependency>
                        <groupId>com.google.code.play2-maven-plugin</groupId>
                        <artifactId>play2-provider-play22</artifactId>
                        <version>${play2.plugin.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <!-- Assembly plugin -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.5</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <tarLongFileMode>posix</tarLongFileMode>
                    <outputDirectory>${output.directory}</outputDirectory>
                    <descriptors>
                        <descriptor>${project.basedir}/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <!-- Assembly plugin : end -->
            <!-- RPM plugin -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <executions>
                    <execution>
                        <id>rtis-rpm</id>
                        <goals>
                            <goal>rpm</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <license>Synchronoss proprietary product</license>
                    <distribution>Real Time Ingestion Service</distribution>
                    <needarch>false</needarch>
                    <targetOS>i386-linux</targetOS>
                    <group>RTIS/FrontEnd Server</group>
                    <packager>BDA</packager>
                    <name>${rpm.name}</name>
                    <!-- -->
                    <defaultUsername>${app.user}</defaultUsername>
                    <defaultGroupname>${app.group}</defaultGroupname>
                    <defaultDirmode>550</defaultDirmode>
                    <defaultFilemode>440</defaultFilemode>
                    <!-- -->
                    <defineStatements>
                        <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
                    </defineStatements>
                    <!-- -->
                    <mappings>
                        <mapping>
                            <directory>${app.optDir}/lib</directory>
                            <filemode>440</filemode>
                            <sources>
                                <source>
                                    <location>
                                        target/${project.artifactId}-${project.version}-package/${project.artifactId}-${project.version}/lib
                                    </location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>${app.optDir}/sbin</directory>
                            <filemode>750</filemode>
                            <sources>
                                <source>
                                    <location>scripts</location>
                                    <includes>
                                        <include>*.sh</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>${app.optDir}/conf</directory>
                            <filemode>644</filemode>
                            <sources>
                                <source>
                                    <location>conf</location>
                                    <includes>
                                        <include>routes</include>
                                        <include>logback.xml</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>${app.optDir}/conf/templates</directory>
                            <filemode>644</filemode>
                            <sources>
                                <source>
                                    <location>conf/templates</location>
                                    <includes>
                                        <include>application.conf.template</include>
                                        <include>cluster.vars.changeme</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <!-- /var/bda -->
                        <mapping>
                            <!-- writable dir only -->
                            <directory>${app.varDir}</directory>
                            <directoryIncluded>true</directoryIncluded>
                            <!-- dirmode>750</dirmode -->
                            <filemode>750</filemode>
                        </mapping>
                        <mapping>
                            <!-- writable dir only -->
                            <directory>${app.varDir}/log</directory>
                            <directoryIncluded>true</directoryIncluded>
                            <filemode>750</filemode>
                            <configuration>noreplace</configuration>
                        </mapping>
                        <mapping>
                            <!-- writable dir only -->
                            <directory>${app.varDir}/run</directory>
                            <directoryIncluded>true</directoryIncluded>
                            <filemode>750</filemode>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <script>echo Install is being prepared
echo Check /etc/bda/cluster.vars can be read
( &lt;/etc/bda/cluster.vars ) || exit 1

# Check/create rtis-user user, group
getent passwd rtis-user &gt;/dev/null || {
    getent group rtis-user &gt;/dev/null || groupadd -g 4020 rtis-user
    useradd -g 4020 -u 4020 rtis-user
    usermod -L rtis-user
    # Check rtis-user exists
    getent passwd rtis-user &gt;/dev/null || {
        echo Error creating Unix user rtis-user
        exit 1
    }
    echo User created: rtis-user
}

# Save versioned name to env file to be used in postinstall
{
    echo app_home=${app.optDir}
    echo app_version=${app.verRel}
} &gt;/tmp/.rtis.tmp.env
                        </script>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
