# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /               controllers.MTSControl.index

POST    /		controllers.TS.handleRequest

# Metadata Service

POST    /md		controllers.MD.handleRequest

# Analysis Service

GET     /analysis                         controllers.Analysis.list(view: String)
GET     /analysis/md                      controllers.Analysis.getMetadataByID(analysisId: String)
POST    /analysis                         controllers.Analysis.process

GET     /analysis/:analysisId/executions  controllers.AnalysisExecutions.list(analysisId: String)
# Note: Keep for API backwards compatibility, remove in future
GET     /analysis/:analysisId/results     controllers.AnalysisExecutions.list(analysisId: String)
GET     /analysis/:analysisId/executions/:executionId/data  controllers.AnalysisExecutions.getExecutionData(analysisId: String, executionId: String, page: Int ?=1, pageSize: Int ?=10, analysisType: String ?="report")

POST    /analysis/:analysisId/executions  controllers.AnalysisExecutions.execute(analysisId: String)

# Semantic

POST    /semantic	controllers.Semantic.handleRequest

GET     /ObjectSearch   controllers.MCT.handleTagRequest(LCID: String, query: Option[String])
POST    /ObjectSearch 	controllers.MCT.extendedTagRequest(LCID: String, indexname: Option[String], objecttype: Option[String])

# Control interface

GET     /control        controllers.MTSControl.executeCmd(CMD:String, PARAMETERS:Option[String])
POST    /control        controllers.MTSControl.executeExtendedCmd(CMD:String)

GET     /sr             controllers.MTSControl.sr( parameters:Option[String])
